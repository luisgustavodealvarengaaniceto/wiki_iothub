# Configuração Nginx - Wiki IoTHub
# Arquivo: /etc/nginx/sites-available/wiki-iothub
#
# Instalação:
# 1. sudo nano /etc/nginx/sites-available/wiki-iothub
# 2. sudo ln -s /etc/nginx/sites-available/wiki-iothub /etc/nginx/sites-enabled/
# 3. sudo nginx -t
# 4. sudo systemctl reload nginx

server {
    listen 7788;
    server_name 137.131.170.156 _;

    # Logs
    access_log /var/log/nginx/wiki-iothub-access.log;
    error_log /var/log/nginx/wiki-iothub-error.log;

    # Tamanho máximo de upload
    client_max_body_size 100M;

    # Proxy para a aplicação Next.js
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        
        # Headers para WebSocket e proxy reverso
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
        
        # Timeout configs
        proxy_cache_bypass $http_upgrade;
        proxy_read_timeout 300s;
        proxy_connect_timeout 75s;
        proxy_send_timeout 300s;
        
        # Buffering
        proxy_buffering off;
    }

    # Assets estáticos (opcional - para melhor performance)
    location /_next/static {
        proxy_pass http://localhost:3000;
        proxy_cache_valid 200 60m;
        add_header Cache-Control "public, immutable";
    }

    # Imagens e arquivos públicos
    location /images {
        proxy_pass http://localhost:3000;
        proxy_cache_valid 200 7d;
        add_header Cache-Control "public, immutable";
    }
}
